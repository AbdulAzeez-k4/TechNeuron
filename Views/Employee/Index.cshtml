@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<style>
    body {
        background: linear-gradient(to right, #707070, #A9A9A9, #C0C0C0); /* Three shades of ash color */
        color:black; /* Set text color to white for better contrast */
    }

    .container {
        margin-top: 20px;
    }

    .card {
        background-color: #fff; /* Set card background color */
    }
</style>

<h2 class="text-center">Dashboard</h2>
<div class="container text-center">

    <div class="row">
        <div class="col-md-6">
            <div class="card mb-3">
                <div class="card-body">
                    <h5 class="card-title">Create New Employee</h5>
                    @Html.ActionLink("Go to Create", "Create", null, new { @class = "btn btn-primary" })
                </div>
            </div>
        </div>
        <div class="col-md-6">
            <div class="card mb-3">
                <div class="card-body">
                    <h5 class="card-title">Read New Employee</h5>
                    @Html.ActionLink("Go to Read", "Read", null, new { @class = "btn btn-success" })
                </div>
            </div>
        </div>
    </div>
</div>
